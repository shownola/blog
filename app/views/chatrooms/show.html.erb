<div class="container">
  <div class="chat">
    <p class="text-center display-2 pt-5">Chat</p>

    <div class="row chat-container">
      <div class="col-md-8 center-block">
        <div class="messages" id="messages">
          <%= render @messages %>
        </div>
      </div>
    </div>
    <hr>
    <div class="message-container">
      <%= form_for(@message, remote: true) do |f| %>
        <%= f.text_area :content, class: 'form-control', placeholder: 'Chat Comment' %>
        <%= f.submit 'Submit Message', class: 'form-group art-btn btn-lg mt-2' %>
      <% end %>
    </div>
  </div>
</div>


