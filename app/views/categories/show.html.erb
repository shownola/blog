<div class="container">
  <div class="display-2 text-center pt-3 title pb-5 pt-5">
    <%= @category.name.capitalize %>
  </div>

  <% if logged_in? && current_user.admin? %>
    <div class="text-center pb-4">
      <%= link_to 'Edit Category Name', edit_category_path(@category), class: 'btn edit-btn' %>
    </div>
  <% end %>

  <h3 class="text-center">Articles</h3>
  <div class="flickr_pagination pb-3">
    <%= will_paginate @articles, :container => false %>
  </div>

  <%= render 'articles/article' %>

  <div class="flickr_pagination pb-3">
    <%= will_paginate @articles, :container => false %>
  </div>





  <p><%= link_to 'All Categories', categories_path, class: 'links' %></p>






</div>

<div class="show-footer"><%= render 'layouts/footer' %></div>
