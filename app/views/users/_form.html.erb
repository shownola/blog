<div class="container pb-5">

  <%= render 'shared/errors', obj: @user %>

  <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :username, class: 'labels' %>
      <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'labels' %>
      <%= f.email_field :email, class: 'form-control', placeholder: "Enter email address" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'labels' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>


    <div class="actions text-center">
      <%= f.submit(@user.new_record? ? 'Sign up' : 'Update Account', class: 'art-btn btn-lg') %>
    </div>
  <% end %>
</div>
