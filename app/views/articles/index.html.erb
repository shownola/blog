
  <div class="container pagebg">
    <h1 class="text-center mt-4">Articles</h1>

    <div class="container">
    <% @articles.each do |article| %>
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header pt-3 font-italic">by <%= article.user.username if article.user %></div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
          <p class="card-text"><%= truncate(article.description, length: 250) %></p>
          <%= link_to 'Article', article_path(article), class: 'btn card-btn ' %>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn edit-btn ' %>
          <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn delete-btn ' %>
        </div>
        <div class="card-footer text-muted"><small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</small></div>
      </div>
      <div class="mb-3"></div>
    <% end %>

  </div>
  </div>
