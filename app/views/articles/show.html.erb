
<div class="container">
  <div class="display-1 text-center pt-3 title">
    <%= @article.title %>
  </div>
  <div class="font-italic">
    Created by <%= @article.user.username if @article.user %> <%= time_ago_in_words(@article.created_at) %> ago
  </div>
  <p class="pt-5 description"><%= simple_format(@article.description) %></p>



    <p><%= link_to 'Edit', edit_article_path(@article), class: 'links' %> | <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'danger' %> | <%= link_to 'All Articles', articles_path, class: 'links' %></p>



</div>

<div class="show-footer"><%= render 'layouts/footer' %></div>
