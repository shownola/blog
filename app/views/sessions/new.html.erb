<div class="container pt-5">
  <div class="card shadow mb-5 bg-white rounded new-form">
    <div class="display-2 text-center title">Login</div>

    <div class="container pb-5">

      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>


        <div class="form-group">
          <%= f.label :email, class: 'labels' %>
          <%= f.email_field :email, class: 'form-control', placeholder: "Enter email address" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'labels' %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
        </div>


        <div class="actions text-center">
          <%= f.submit 'Login', class: 'art-btn btn-lg' %>
        </div>
      <% end %>
    </div>


      <p><%= link_to 'All Users', users_path, class: 'links' %></p>
    </div>
</div>
